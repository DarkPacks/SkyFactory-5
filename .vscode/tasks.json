{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "eslint: lint whole folder",
      "type": "eslint",
      "problemMatcher": ["$eslint-stylish"],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
