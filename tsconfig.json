{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "schemas/*": ["schemas/*"]
    }
  },
  "include": ["schemas/**/*", "src/**/*", "scripts/**/*"],
  "typeRoots": ["./schemas", "node_modules/@types"]
}
